<%= stylesheet_link_tag ("index") %>

<div class="sidecont">
    <div class="sidebar">
        <div class="logo">
            <div>YK</div>
        </div>
        <div class="option">
            <div class="tab"><%= link_to "DASHBOARD", moves_path %></div>
            <div class="tab"><%= link_to "PROJETS", projets_path %></div>
            <div class="tab">ABOUT</div>
        </div>
        <div class="user">
            <%= @user.first_name %> <%= @user.last_name %>
            <div>
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete},class: "dropdown-item", class: "logout" %>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class=navbar>
            <div class="logo2">
            <div>YK</div>
        </div>
        <div class="option2">
            <div class="tab"><%= link_to "Dashboard", moves_path %></div>
            <div class="tab"><%= link_to "Projets", projets_path %>t</div>
            <div class="tab">About</div>
        </div>       
        <div class="user2">
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete},class: "dropdown-item", class: "logout" %>
            <div> Yoaki Niscoise </div>
        </div>
        <div class="menu">Menu</div>
    </div>
    <div class=supérieur>
        <div class=titlezone>
            <h1>Welcome <%= @user.first_name %> <%= @user.last_name %> </h1>
            <div>We are here to help you manage your money!</div>
        </div>
    </div>
    <div class=inferieur>
    <%= link_to "Nouveau projet", new_projet_path  %>  
        <div class="transaction">
            <table class = transtable>
                <thead>
                    <tr>
                        <th>Priority</th>
                        <th>Name</th>
                        <th>Montant</th>
                        <th>Loading</th>
                        <th>Month left</th>
                        <th>Option</th>
                        <th>Financer</th>
                    </tr>
                </thead>
                <tbody>
                    <% @user.projets.sort{ |a, b| a.priority <=> b.priority }.find_all{|projet| projet.complete == false}.each do |projet| %>
                        <tr>
                            <td><%= projet.priority %></td> 
                            <td><%= projet.name %></td> 
                            <td><%= projet.amount %> €</td> 
                            <td><%= projet.load.round(1) %>%</td>
                            <td><%= projet.month_left.round(1) %> month</td>
                            <td><%= link_to "edit", edit_projet_path(projet) %></td> 
                            <td><%= link_to "Invest", projet_completion_path(projet), data: { turbo_confirm: 'Are you sure?'} %></td> 
                        </tr>
                    <%end%>
                </tbody>
            </table>    
        </div>  
        <div class="transaction">
            <table class = transtable>
                <thead>
                    <tr>
                        <th>Priority</th>
                        <th>Name</th>
                        <th>Montant</th>
                        <th>Loading</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    <% @user.projets.sort{ |a, b| a.priority <=> b.priority }.find_all{|projet| projet.complete == true}.each do |projet| %>
                        <tr>
                            <td><%= projet.priority %></td> 
                            <td><%= projet.name %></td> 
                            <td><%= projet.amount %> €</td> 
                            <td><%= projet.load.round(1) %>%</td> 
                            <td><%= link_to "edit", edit_projet_path(projet) %></td> 
                        </tr>
                    <%end%>
                </tbody>
            </table>    
        </div>  
    </div>
</div>