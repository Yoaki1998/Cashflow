
<%= stylesheet_link_tag ("new") %>

<div class="navbar v2">
        <div class="logo2">
        <div>YK</div>
    </div>
    <div class="option2">
        <div class="tab"></div>
        <div class="tab"></div>
        <div class="tab">About</div>
    </div>       
    <div class="user2">
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete},class: "dropdown-item", class: "logout" %>
        <div> Yoaki Niscoise </div>
    </div>
    <div class="menu">Menu</div>
</div>

<div class="fakebody">
  <div class="containerform">
    <div class="titleform"> INSCRIPTION FORM</div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),data: {turbo: false}) do |f| %>
      <div class="row">
        <%= f.label :first_name,"Prénom" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "prénom" %>
      </div>
      <div class="row">
        <%= f.label :last_name,"Nom" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "nom" %>
      </div>
      <div class="row">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="row">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> char min)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="row">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

        <%= f.submit value:"SIGN IN", class:"submit b" %>
        <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>